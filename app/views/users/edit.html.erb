<% provide(:title,'Edit')%>
<h1>Update your profile</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= render 'field', f: f %>
			<%= f.submit "Save", class: "btn btn-large btn-primary" %>
		<% end %>
		
		<%= gravatar_for @user%>
		<a href="http://gravatar.com/emails" target="_blank" "> Change Picgure </a>
	</div>		
</div>
